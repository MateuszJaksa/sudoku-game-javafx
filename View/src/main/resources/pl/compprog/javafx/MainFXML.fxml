<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" maxHeight="220.0" maxWidth="440.0" minHeight="220.0" minWidth="440.0" prefHeight="220.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.compprog.javafx.DifficultyController">
    <children>
        <Button fx:id="easy" alignment="BASELINE_CENTER" layoutX="30" layoutY="10" prefHeight="60" prefWidth="80" onAction="#clickEasy" />
        <Button fx:id="medium" alignment="BASELINE_CENTER" layoutX="130" layoutY="10" prefHeight="60" prefWidth="80" onAction="#clickMedium" />
        <Button fx:id="hard" alignment="BASELINE_CENTER" layoutX="230" layoutY="10" prefHeight="60" prefWidth="80" onAction="#clickHard" />
        <Button fx:id="newGame" alignment="BASELINE_CENTER" layoutX="330" layoutY="10" prefHeight="60" prefWidth="80" onAction="#changeScreen" />
        <Label fx:id="nameLabel" alignment="BASELINE_CENTER" layoutX="80" layoutY="100" prefHeight="100" prefWidth="240">
         <font>
            <Font name="Bodoni MT" size="40.0" />
         </font></Label>
        <Button fx:id="languageMenu" alignment="BASELINE_CENTER" prefWidth="80" prefHeight="40" layoutX="340" layoutY="160" onAction="#handleLanguageActionMenu" />
    </children>
</AnchorPane>
